{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "types": ["trailmakers"],
    "strict": true,
  },
  "tstl": {
		"buildMode": "default",
    "luaTarget": "5.2",

    // As soon as you have more than one typescript file, uncomment these lines.
		// "luaBundle": "./main.lua",
		// "luaBundleEntry": "./src/main.ts",
		
    "luaLibImport": "require-minimal",
		"noImplicitSelf": true,
  },
}